// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  CLIENT
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  ON_HOLD
  COMPLETED
  CANCELLED
}

enum ActionItemStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  OVERDUE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum NotificationType {
  ACTION_ITEM_ASSIGNED
  ACTION_ITEM_DUE_SOON
  ACTION_ITEM_OVERDUE
  ACTION_ITEM_COMPLETED
  PROJECT_UPDATED
  CLIENT_ADDED
  REMINDER
  MENTIONED
  MESSAGE_RECEIVED
  DOCUMENT_UPLOADED
  MEETING_SCHEDULED
  MEETING_REMINDER
}

enum MeetingStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum DeliverableStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
}

enum FormFieldType {
  TEXT
  TEXTAREA
  SELECT
  FILE
}

enum FormAssignmentStatus {
  PENDING
  SUBMITTED
  REVIEWED
}

enum SecureFieldType {
  SHORT_TEXT
  LONG_TEXT
  SECRET
}

enum ActivityEntityType {
  PROJECT
  CLIENT
  ACTION_ITEM
  MESSAGE
  DOCUMENT
  DELIVERABLE
  MEETING
  FORM
  OTHER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  password      String?   // For email/password auth
  role          UserRole  @default(CLIENT)
  googleId      String?   @unique
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  active        Boolean   @default(true)
  notifyOnClientMessage Boolean @default(true)
  lastSeenAt    DateTime?

  // Relations
  accounts            Account[]
  sessions           Session[]
  createdClients     Client[]              @relation("ClientCreator")
  createdProjects    Project[]             @relation("ProjectCreator")
  createdActionItems ActionItem[]          @relation("ActionItemCreator")
  assignedActionItems ActionItem[]         @relation("ActionItemAssignee")
  personalTasks      PersonalTask[]
  notifications      Notification[]
  uploadedDocuments  Document[]
  uploadedClientDocuments ClientDocument[] @relation("ClientDocumentUploader")
  sentMessages       Message[]             @relation("MessageSender")
  receivedMessages   Message[]             @relation("MessageRecipient")
  mentions           Mention[]
  createdMeetings    Meeting[]             @relation("MeetingCreator")
  meetingAttendees   MeetingAttendee[]
  createdUserInvitations UserInvitation[]  @relation("UserInvitationCreator")
  uploadedDeliverables Deliverable[]       @relation("DeliverableUploader")
  actionItemUploads  ActionItemAttachment[] @relation("ActionItemAttachmentUploader")
  activityLogs ActivityLog[]               @relation("ActivityAuthor")
  formTemplates FormTemplate[]             @relation("FormTemplateCreator")
  assignedForms FormAssignment[]           @relation("FormAssignmentCreator")
  formSubmissions FormSubmission[]         @relation("FormSubmissionUser")
  passwordResetTokens PasswordResetToken[]
  secureResponses ActionSecureResponse[]   @relation("SecureResponseSubmitter")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  phone     String?
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String

  // Relations
  creator   User      @relation("ClientCreator", fields: [createdBy], references: [id])
  projects  Project[]
  documents ClientDocument[]
  messages  Message[]
  meetings  Meeting[]
  deliverables Deliverable[]
  formAssignments FormAssignment[]
  active    Boolean   @default(true)
  invitation ClientInvitation?

  @@map("clients")
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?       @db.Text
  status      ProjectStatus @default(PLANNING)
  progress    Int           @default(0) // 0-100
  dueDate     DateTime?
  startDate   DateTime?
  completedAt DateTime?
  completionSummary String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  clientId    String
  createdBy   String

  // Relations
  client       Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  creator      User          @relation("ProjectCreator", fields: [createdBy], references: [id])
  actionItems  ActionItem[]
  documents    Document[]
  milestones   Milestone[]
  messages     Message[]
  meetings     Meeting[]
  deliverables Deliverable[]
  formAssignments FormAssignment[]

  @@map("projects")
}

model Milestone {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  dueDate     DateTime?
  completedAt DateTime?
  projectId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("milestones")
}

model ActionItem {
  id          String          @id @default(cuid())
  title       String
  description String?         @db.Text
  status      ActionItemStatus @default(PENDING)
  priority    Priority        @default(MEDIUM)
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  projectId   String?         // Nullable for global action items
  assignedTo  String?
  createdBy   String
  visibleToClient Boolean @default(false)
  clientCanComplete Boolean @default(false)
  clientCompleted Boolean @default(false)
  clientCompletedAt DateTime?
  clientNotes String? @db.Text
  showOnTimeline Boolean @default(false)
  timelineLabel String?
  requiresSecureResponse Boolean @default(false)
  securePrompt String? @db.Text
  secureFieldType SecureFieldType? @default(SHORT_TEXT)

  // Relations
  project     Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?           @relation("ActionItemAssignee", fields: [assignedTo], references: [id])
  creator     User            @relation("ActionItemCreator", fields: [createdBy], references: [id])
  notifications Notification[]
  mentions   Mention[]
  attachments ActionItemAttachment[]
  secureResponse ActionSecureResponse?

  @@map("action_items")
}

model Notification {
  id           String           @id @default(cuid())
  type         NotificationType
  message      String
  read         Boolean          @default(false)
  userId       String
  actionItemId String?
  createdAt    DateTime         @default(now())

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionItem ActionItem? @relation(fields: [actionItemId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Document {
  id            String   @id @default(cuid())
  name          String
  googleDriveId String?
  url           String?
  mimeType      String?
  size          Int?
  projectId     String?
  uploadedBy    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  project  Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploader User     @relation(fields: [uploadedBy], references: [id])

  @@map("documents")
}

model ClientDocument {
  id            String   @id @default(cuid())
  name          String
  googleDriveId String?
  url           String?
  mimeType      String?
  size          Int?
  type          String?  // e.g., "contract", "proposal", "invoice"
  clientId      String
  uploadedBy    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  client    Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  uploader  User   @relation("ClientDocumentUploader", fields: [uploadedBy], references: [id])

  @@map("client_documents")
}

model PersonalTask {
  id          String          @id @default(cuid())
  title       String
  description String?         @db.Text
  status      ActionItemStatus @default(PENDING)
  priority    Priority        @default(MEDIUM)
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  userId      String

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("personal_tasks")
}

model Message {
  id        String   @id @default(cuid())
  content  String   @db.Text
  clientId String?
  projectId String?
  senderId  String
  recipientId String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  client    Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sender    User     @relation("MessageSender", fields: [senderId], references: [id])
  recipient User?    @relation("MessageRecipient", fields: [recipientId], references: [id])
  mentions  Mention[]

  @@map("messages")
}

model Mention {
  id          String   @id @default(cuid())
  messageId   String?
  actionItemId String?
  mentionedUserId String
  createdAt   DateTime @default(now())

  // Relations
  message     Message?    @relation(fields: [messageId], references: [id], onDelete: Cascade)
  actionItem  ActionItem? @relation(fields: [actionItemId], references: [id], onDelete: Cascade)
  mentionedUser User     @relation(fields: [mentionedUserId], references: [id], onDelete: Cascade)

  @@map("mentions")
}

model Meeting {
  id            String        @id @default(cuid())
  title         String
  description   String?        @db.Text
  startTime     DateTime
  endTime       DateTime
  location      String?        // Physical location or Google Meet link
  googleEventId String?        // Google Calendar event ID
  status        MeetingStatus  @default(SCHEDULED)
  clientId      String?
  projectId     String?
  createdBy     String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Relations
  client       Client?         @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project      Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creator      User            @relation("MeetingCreator", fields: [createdBy], references: [id])
  attendees    MeetingAttendee[]

  @@map("meetings")
}

model MeetingAttendee {
  id        String   @id @default(cuid())
  meetingId String
  userId    String
  status    String?  // "accepted", "declined", "tentative", "needsAction"
  createdAt DateTime @default(now())

  // Relations
  meeting   Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([meetingId, userId])
  @@map("meeting_attendees")
}

model ClientInvitation {
  id        String   @id @default(cuid())
  clientId  String   @unique
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("client_invitations")
}

model ActionItemAttachment {
  id           String   @id @default(cuid())
  actionItemId String
  name         String
  url          String
  uploadedBy   String?
  createdAt    DateTime @default(now())
  mimeType     String?
  size         Int?

  actionItem ActionItem @relation(fields: [actionItemId], references: [id], onDelete: Cascade)
  uploader   User?      @relation("ActionItemAttachmentUploader", fields: [uploadedBy], references: [id])

  @@map("action_item_attachments")
}

model Deliverable {
  id          String             @id @default(cuid())
  name        String
  description String?            @db.Text
  status      DeliverableStatus  @default(IN_PROGRESS)
  link        String?
  clientId    String
  projectId   String?
  uploadedBy  String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  client  Client  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploader User?   @relation("DeliverableUploader", fields: [uploadedBy], references: [id])

  @@map("deliverables")
}

model UserInvitation {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      UserRole @default(CLIENT)
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdBy String?
  createdAt DateTime @default(now())

  creator   User?    @relation("UserInvitationCreator", fields: [createdBy], references: [id])

  @@map("user_invitations")
}

model ActivityLog {
  id          String              @id @default(cuid())
  entityType  ActivityEntityType
  entityId    String
  action      String
  changes     Json?
  metadata    Json?
  createdBy   String?
  createdAt   DateTime            @default(now())

  author User? @relation("ActivityAuthor", fields: [createdBy], references: [id])

  @@index([entityType, entityId], name: "activity_entity_idx")
  @@map("activity_logs")
}

model FormTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  fields      FormField[]
  assignments FormAssignment[]

  creator User @relation("FormTemplateCreator", fields: [createdBy], references: [id])

  @@map("form_templates")
}

model FormField {
  id         String        @id @default(cuid())
  templateId String
  label      String
  type       FormFieldType
  required   Boolean       @default(false)
  order      Int           @default(0)
  options    Json?

  template FormTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@map("form_fields")
}

model FormAssignment {
  id         String                @id @default(cuid())
  templateId String
  clientId   String
  projectId  String?
  assignedBy String
  status     FormAssignmentStatus  @default(PENDING)
  createdAt  DateTime              @default(now())
  updatedAt  DateTime              @updatedAt
  submissions FormSubmission[]

  template FormTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  client   Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project  Project?     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creator  User         @relation("FormAssignmentCreator", fields: [assignedBy], references: [id])

  @@map("form_assignments")
}

model FormSubmission {
  id           String   @id @default(cuid())
  assignmentId String
  submittedBy  String?
  submittedAt  DateTime @default(now())
  responses    Json

  assignment FormAssignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  submitter  User?          @relation("FormSubmissionUser", fields: [submittedBy], references: [id])
  attachments FormSubmissionAttachment[]

  @@map("form_submissions")
}

model FormSubmissionAttachment {
  id            String   @id @default(cuid())
  submissionId  String
  name          String
  url           String
  mimeType      String?
  size          Int?
  fieldId       String?
  createdAt     DateTime @default(now())

  submission FormSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@map("form_submission_attachments")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("password_reset_tokens")
}

model ActionSecureResponse {
  id            String   @id @default(cuid())
  actionItemId  String   @unique
  submittedBy   String?
  encryptedData String   @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  actionItem ActionItem @relation(fields: [actionItemId], references: [id], onDelete: Cascade)
  submitter  User?      @relation("SecureResponseSubmitter", fields: [submittedBy], references: [id], onDelete: Cascade)

  @@map("action_secure_responses")
}

