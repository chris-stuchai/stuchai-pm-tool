// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  CLIENT
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  ON_HOLD
  COMPLETED
  CANCELLED
}

enum ActionItemStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  OVERDUE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum NotificationType {
  ACTION_ITEM_ASSIGNED
  ACTION_ITEM_DUE_SOON
  ACTION_ITEM_OVERDUE
  ACTION_ITEM_COMPLETED
  PROJECT_UPDATED
  CLIENT_ADDED
  REMINDER
  MENTIONED
  MESSAGE_RECEIVED
  DOCUMENT_UPLOADED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  password      String?   // For email/password auth
  role          UserRole  @default(CLIENT)
  googleId      String?   @unique
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts            Account[]
  sessions           Session[]
  createdClients     Client[]              @relation("ClientCreator")
  createdProjects    Project[]             @relation("ProjectCreator")
  createdActionItems ActionItem[]          @relation("ActionItemCreator")
  assignedActionItems ActionItem[]         @relation("ActionItemAssignee")
  personalTasks      PersonalTask[]
  notifications      Notification[]
  uploadedDocuments  Document[]
  uploadedClientDocuments ClientDocument[] @relation("ClientDocumentUploader")
  sentMessages       Message[]             @relation("MessageSender")
  receivedMessages   Message[]             @relation("MessageRecipient")
  mentions           Mention[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  phone     String?
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String

  // Relations
  creator   User      @relation("ClientCreator", fields: [createdBy], references: [id])
  projects  Project[]
  documents ClientDocument[]
  messages  Message[]

  @@map("clients")
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?       @db.Text
  status      ProjectStatus @default(PLANNING)
  progress    Int           @default(0) // 0-100
  dueDate     DateTime?
  startDate   DateTime?
  completedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  clientId    String
  createdBy   String

  // Relations
  client       Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  creator      User          @relation("ProjectCreator", fields: [createdBy], references: [id])
  actionItems  ActionItem[]
  documents    Document[]
  milestones   Milestone[]
  messages     Message[]

  @@map("projects")
}

model Milestone {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  dueDate     DateTime?
  completedAt DateTime?
  projectId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("milestones")
}

model ActionItem {
  id          String          @id @default(cuid())
  title       String
  description String?         @db.Text
  status      ActionItemStatus @default(PENDING)
  priority    Priority        @default(MEDIUM)
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  projectId   String?         // Nullable for global action items
  assignedTo  String?
  createdBy   String

  // Relations
  project     Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?           @relation("ActionItemAssignee", fields: [assignedTo], references: [id])
  creator     User            @relation("ActionItemCreator", fields: [createdBy], references: [id])
  notifications Notification[]
  mentions   Mention[]

  @@map("action_items")
}

model Notification {
  id           String           @id @default(cuid())
  type         NotificationType
  message      String
  read         Boolean          @default(false)
  userId       String
  actionItemId String?
  createdAt    DateTime         @default(now())

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionItem ActionItem? @relation(fields: [actionItemId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Document {
  id            String   @id @default(cuid())
  name          String
  googleDriveId String?
  url           String?
  mimeType      String?
  size          Int?
  projectId     String?
  uploadedBy    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  project  Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploader User     @relation(fields: [uploadedBy], references: [id])

  @@map("documents")
}

model ClientDocument {
  id            String   @id @default(cuid())
  name          String
  googleDriveId String?
  url           String?
  mimeType      String?
  size          Int?
  type          String?  // e.g., "contract", "proposal", "invoice"
  clientId      String
  uploadedBy    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  client    Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  uploader  User   @relation("ClientDocumentUploader", fields: [uploadedBy], references: [id])

  @@map("client_documents")
}

model PersonalTask {
  id          String          @id @default(cuid())
  title       String
  description String?         @db.Text
  status      ActionItemStatus @default(PENDING)
  priority    Priority        @default(MEDIUM)
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  userId      String

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("personal_tasks")
}

model Message {
  id        String   @id @default(cuid())
  content  String   @db.Text
  clientId String?
  projectId String?
  senderId  String
  recipientId String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  client    Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sender    User     @relation("MessageSender", fields: [senderId], references: [id])
  recipient User?    @relation("MessageRecipient", fields: [recipientId], references: [id])
  mentions  Mention[]

  @@map("messages")
}

model Mention {
  id          String   @id @default(cuid())
  messageId   String?
  actionItemId String?
  mentionedUserId String
  createdAt   DateTime @default(now())

  // Relations
  message     Message?    @relation(fields: [messageId], references: [id], onDelete: Cascade)
  actionItem  ActionItem? @relation(fields: [actionItemId], references: [id], onDelete: Cascade)
  mentionedUser User     @relation(fields: [mentionedUserId], references: [id], onDelete: Cascade)

  @@map("mentions")
}

